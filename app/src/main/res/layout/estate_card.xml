<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Employee Name -->
        <TextView
            android:id="@+id/tvEstateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estate ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <!-- Employee Username -->
        <TextView
            android:id="@+id/tvEstateName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estate Name"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Employee Position -->
        <TextView
            android:id="@+id/tvEstateLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estate Location"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>

        <!-- Employee Phone Number -->
        <TextView
            android:id="@+id/tvEstateSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estate Size"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <!-- Employee Gender -->
        <TextView
            android:id="@+id/tvEstateAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estate Addtional Infomation"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
