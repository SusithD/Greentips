<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvBuyerID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvBuyerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tvBuyerPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Phone Number"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tvBuyerCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Company Name"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvBuyerCompanyPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comapny Phone Number"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvBuyerCompanyAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comapny Address"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvBuyerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Type"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvBuyerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Email"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvBuyerUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Username"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvBuyerPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buyer Password"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>




    </LinearLayout>

</androidx.cardview.widget.CardView>
