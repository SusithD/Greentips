<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvIntercropID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercrop Tree ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvIntercropEstateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercrop Estate ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tvIntercropType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercrop Type"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tvIntercropPlantedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planted Date"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvCoconutAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intercrop Addtional Infomation"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
