<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvCoconutID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coconut Tree ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvCoconutEstateID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coconut Estate ID"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/tvCoconutTreeType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coconut Tree Type"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tvCoconutPlantedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planted Date"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvCoconutTreeAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvCoconutTreeHealthStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Status"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


        <TextView
            android:id="@+id/tvCoconutNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Coconut Harvested From the Tree"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvCoconutAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coconut Addtional Infomation"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>
